<h1>Addresses</h1>
<%= link_to "New Address", new_address_path %>

<table>
  <thead>
    <tr>
      <th>Colony</th>
      <th>City</th>
      <th>Pincode</th>
      <th>Country</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.colony %></td>
        <td><%= address.city %></td>
        <td><%= address.pincode %></td>
        <td><%= address.country %></td>
        <td>
          <%= link_to "Show", address_path(address) %> |
          <%= link_to "Edit", edit_address_path(address) %> |
          <%= link_to "Delete", address_path(address), method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Back", root_path%>
