<h1>Profiles</h1>
<%= link_to "New Profile", new_profile_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Contact No</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.name %></td>
        <td><%= profile.contact_no %></td>
        <td><%= profile.age %></td>
        <td><%= profile.gender %></td>
        <td>
          <%= link_to "Show", profile_path(profile) %> |
          <%= link_to "Edit", edit_profile_path(profile) %> |
          <%= link_to "Delete", profile_path(profile), method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
